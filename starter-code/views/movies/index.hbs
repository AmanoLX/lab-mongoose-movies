<h2>All Movies</h2>

<ul>
  {{#each movies}}
    <li>Title: {{title}}</li>
    <a href='/movies/{{_id}}'>See Details</a>
    <form action='/movies/{{_id}}/delete' method="post">
      <button>Delete</button>
    </form>
  {{/each}}
</ul>

